<div class="max-w-md mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-2 text-center">Check Application Status</h1>
    <p class="text-gray-600 mb-6 text-center">Enter your reference number to check the status of your application.</p>

    <%= form_with url: lookup_application_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :reference_number, "Reference Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :reference_number, autofocus: true, placeholder: "HC-XXXXXXXX",
                         class: "w-full text-center uppercase border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
        <p class="text-xs text-gray-500 mt-1 text-center">This was sent to you in your confirmation email.</p>
      </div>

      <div>
        <%= f.submit "Check Status", class: "w-full bg-red-600 text-white py-3 px-4 rounded-md hover:bg-red-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
