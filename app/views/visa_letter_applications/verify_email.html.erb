<div class="max-w-md mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-2 text-center">Verify Your Email</h1>
    <p class="text-gray-600 mb-6 text-center">
      We've sent a 6-digit verification code to<br>
      <strong><%= @participant.email %></strong>
    </p>

    <%= form_with url: confirm_verification_visa_letter_application_path(@application), method: :post, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :verification_code, "Verification Code", class: "block text-sm font-medium text-gray-700 mb-1 text-center" %>
        <%= f.text_field :verification_code, maxlength: 6, pattern: "[0-9]{6}",
                         autofocus: true, autocomplete: "one-time-code",
                         class: "w-full text-center text-2xl tracking-widest border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500",
                         placeholder: "000000" %>
      </div>

      <div>
        <%= f.submit "Verify Email", class: "w-full bg-red-600 text-white py-3 px-4 rounded-md hover:bg-red-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600 mb-2">Didn't receive the code?</p>
      <% if @participant.can_resend_verification_code? %>
        <%= button_to "Resend Code", resend_verification_visa_letter_application_path(@application),
                      method: :post, class: "text-red-600 hover:text-red-700 text-sm font-medium" %>
      <% else %>
        <p class="text-sm text-gray-500">Please wait before requesting a new code.</p>
      <% end %>
    </div>

    <p class="text-xs text-gray-500 mt-6 text-center">
      The code expires in 30 minutes.
    </p>
  </div>
</div>
