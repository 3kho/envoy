<div class="max-w-3xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6"><%= @event.name %></h1>

    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <div>
        <h3 class="font-semibold text-gray-700 mb-2">Event Dates</h3>
        <p class="text-gray-600"><%= @event.date_range %></p>
      </div>
      <div>
        <h3 class="font-semibold text-gray-700 mb-2">Location</h3>
        <p class="text-gray-600"><%= @event.full_address %></p>
      </div>
    </div>

    <% if @event.description.present? %>
      <div class="mb-8">
        <h3 class="font-semibold text-gray-700 mb-2">About This Event</h3>
        <p class="text-gray-600"><%= @event.description %></p>
      </div>
    <% end %>

    <% if @event.application_deadline.present? %>
      <div class="bg-orange-50 border border-orange-200 rounded-md p-4 mb-8">
        <p class="text-orange-800">
          <strong>Application Deadline:</strong> <%= @event.application_deadline.strftime("%B %d, %Y at %I:%M %p") %>
        </p>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "Apply for Visa Letter", new_event_application_path(event_slug: @event.slug),
                  class: "inline-block bg-red-600 text-white py-3 px-8 rounded-md hover:bg-red-700 transition-colors text-lg" %>
    </div>
  </div>
</div>
